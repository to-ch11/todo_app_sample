<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>
      
      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div>
    <%= form.label :title, style: "display: inline" %>
    <%= form.text_field :title %>
  </div>
  
  <div class="select-year">
    <select id="birth-year" class="select-box">
      <option value= "2020"></option>
      <option value= "2021"></option>
      <option value= "2022"></option>
    </select>
    <input type="hidden" name="cookpad_user_registration[birth_year]" value="">
    <span class="select-label">年</span>
  </div>
  
  <div>
    <%= form.label :開始日時, style: "display: inline" %>
    <%= form.text_field :start_at %>
  </div>
  
  <div>
    <%= form.label :終了日時, style: "display: inline" %>
    <%= form.text_field :end_at %>
  </div>

  <div>
  <select class="form-select" aria-label="Default select example">
  <option selected>繰り返し</option>
  <option value="1">なし</option>
  <option value="2">毎日</option>
  <option value="3">毎週</option>
  <option value="4">毎月</option>
  <option value="5">毎年</option>
  </select>
  </div>
  
  <div>
    <%= form.label :place, style: "display: inline" %>
    <%= form.text_field :place %>
  </div>
    
  <div>
    <%= form.label :place, style: "display: block" %>
    <%= form.text_field :place %>
  </div>
  
  <div>
    <%= form.label :place, style: "display: block" %>
    <%= form.text_field :place %>
  </div>
  
  <div>
    <div class="contact-heading">
      <label class="contact-label">お問い合わせ内容<span class="contact-span">必須</span></label>
    </div>
    <div>
      <textarea class="contact-textarea" placeholder="入力してください" name="message"></textarea>
    </div>
  </div>
  
  <div>
    <%= form.submit %>
  </div>
<% end %>